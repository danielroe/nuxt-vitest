{
  "name": "vitest-environment-nuxt",
  "version": "0.2.0",
  "description": "An in-development vitest environment with support for testing code that needs a Nuxt runtime environment.",
  "repository": "danielroe/vitest-environment-nuxt",
  "keywords": [
    "nuxt",
    "vitest",
    "vitest-environment"
  ],
  "author": {
    "name": "Daniel Roe <daniel@roe.dev>",
    "url": "https://github.com/danielroe"
  },
  "license": "MIT",
  "scripts": {
    "build": "unbuild",
    "dev:prepare": "unbuild --stub && pnpm nuxi prepare playground",
    "test": "pnpm -C playground test",
    "dev": "pnpm dev:prepare && pnpm -C playground test:nuxt"
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "exports": {
    "./config": {
      "require": "./dist/config.cjs",
      "import": "./dist/config.mjs",
      "types": "./dist/config.d.ts"
    },
    "./utils": {
      "require": "./dist/utils.cjs",
      "import": "./dist/utils.mjs",
      "types": "./dist/utils.d.ts"
    },
    ".": {
      "require": "./dist/index.cjs",
      "import": "./dist/index.mjs",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist",
    "config.d.ts",
    "utils.d.ts"
  ],
  "dependencies": {
    "@nuxt/kit": "^3.0.0",
    "@vue/test-utils": "^2.2.6",
    "h3": "^1.0.2",
    "happy-dom": "^8.1.0",
    "ofetch": "^1.0.0",
    "unenv": "^1.0.0"
  },
  "devDependencies": {
    "@release-it/conventional-changelog": "latest",
    "conventional-changelog-conventionalcommits": "latest",
    "nuxt": "3.0.0",
    "release-it": "latest",
    "unbuild": "^1.0.2",
    "vitest": "0.26.2",
    "vue": "^3.2.45"
  },
  "resolutions": {
    "vitest-environment-nuxt": "workspace:*"
  },
  "peerDependencies": {
    "vitest": "^0.24.5",
    "vue": "^3.2.45"
  },
  "packageManager": "pnpm@7.18.0"
}
